import java.awt.BasicStroke;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import javax.swing.JPanel;

public class Ligne extends JPanel {
    private java.awt.Point start;
    private java.awt.Point end;
    private boolean drawing = false;
    // Flag indiquant si la ligne a été créée en mode "connexion"
    private boolean isConnection = false;

    public Ligne() {
        setBackground(Color.WHITE);
        
        // Gestionnaire pour le dessin libre
        addMouseListener(new MouseAdapter() {
            @Override
            public void mousePressed(MouseEvent e) {
                // Autorise le dessin libre seulement si aucune connexion n'a été créée
                if (!isConnection) {
                    start = e.getPoint();
                    drawing = true;
                }
            }

            @Override
            public void mouseReleased(MouseEvent e) {
                if (!isConnection) {
                    end = e.getPoint();
                    drawing = false;
                    repaint();
                    System.out.println("Ligne libre créée !");
                }
            }
        });

        addMouseMotionListener(new MouseAdapter() {
            @Override
            public void mouseDragged(MouseEvent e) {
                if (!isConnection && drawing) {
                    end = e.getPoint();
                    repaint();
                }
            }
        });
    }

    /**
     * Utilisée pour créer une ligne de connexion (via, par exemple, votre ConnectionManager).
     * La ligne sera dessinée avec un coude si les points ne sont pas alignés horizontalement ou verticalement.
     */
    public void setConnection(java.awt.Point start, java.awt.Point end) {
        this.start = start;
        this.end = end;
        this.isConnection = true;
        repaint();
    }

    /**
     * Permet de réinitialiser la ligne pour revenir au mode dessin libre.
     */
    public void resetConnection() {
        this.isConnection = false;
        this.start = null;
        this.end = null;
        drawing = false;
        repaint();
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        g.setColor(Color.BLUE);
        Graphics2D g2d = (Graphics2D) g;
        g2d.setStroke(new BasicStroke(3));

        if (start != null && end != null) {
            // Si nous sommes en mode "connexion" et que les points ne sont pas alignés,
            // on dessine une ligne en coude (horizontal puis vertical).
            if (isConnection && start.x != end.x && start.y != end.y) {
                g.drawLine(start.x, start.y, end.x, start.y);
                g.drawLine(end.x, start.y, end.x, end.y);
            } else {
                // Sinon, on dessine une ligne droite (pour les lignes libres ou si alignés)
                g.drawLine(start.x, start.y, end.x, end.y);
            }
        }
    }
}
