import javax.swing.*;
import java.awt.*;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;

public class CustomCanvas extends JPanel {
    
    private int mouseX = -1, mouseY = -1; // Coordonn√©es de la souris

    public CustomCanvas() {
        setBackground(Color.WHITE); // Fond blanc comme Logisim

        // üéØ Capturer les clics pour enregistrer la position
        addMouseListener(new MouseAdapter() {
            @Override
            public void mousePressed(MouseEvent e) {
                mouseX = e.getX();
                mouseY = e.getY();
                repaint(); // Redessiner apr√®s le clic
            }
        });
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        Graphics2D g2d = (Graphics2D) g;

        // ‚úÖ Activer l'anti-aliasing pour un dessin fluide
        g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);

        // ‚úçÔ∏è Dessiner un texte aux coordonn√©es cliqu√©es
        if (mouseX != -1 && mouseY != -1) {
            g2d.setColor(Color.RED);
            g2d.setFont(new Font("Arial", Font.BOLD, 16));
            g2d.drawString("X: " + mouseX + ", Y: " + mouseY, mouseX, mouseY);
        }
    }
}
