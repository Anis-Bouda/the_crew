

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class NOT extends JPanel {

    private final int width = 46;
    private final int height = 60;

    public NOT() {
        setPreferredSize(new Dimension(width + 10, height));
        setBackground(Color.WHITE);
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        Graphics2D g2d = (Graphics2D) g;

        int[] xPoints = {0, 0, (int) (width * 0.8)};
        int[] yPoints = {0, height, height / 2};
        
        g2d.setColor(Color.WHITE);
        g2d.fillPolygon(xPoints, yPoints, 3);
        g2d.setColor(Color.BLACK);
        g2d.drawPolygon(xPoints, yPoints, 3);

        int bubbleX = (int) (width * 0.8) + 3;
        int bubbleY = height / 2;
        int bubbleRadius = 5;
        
        g2d.setColor(Color.WHITE);
        g2d.fillOval(bubbleX - bubbleRadius, bubbleY - bubbleRadius, 2 * bubbleRadius, 2 * bubbleRadius);
        g2d.setColor(Color.BLACK);
        g2d.drawOval(bubbleX - bubbleRadius, bubbleY - bubbleRadius, 2 * bubbleRadius, 2 * bubbleRadius);
    }

    public static void main(String[] args) {
        JFrame frame = new JFrame("NOT Gate View");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.add(new NOT());
        frame.pack();
        frame.setLocationRelativeTo(null);
        frame.setVisible(true);
    }
}
