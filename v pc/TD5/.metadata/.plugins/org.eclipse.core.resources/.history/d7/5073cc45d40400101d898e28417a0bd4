import javax.swing.*;
import java.awt.*;

public class CustomPanel extends JPanel {
    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        Graphics2D g2d = (Graphics2D) g;

        // ðŸ”¹ AmÃ©liorer la qualitÃ© d'affichage
        g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);

        // ðŸ”¹ DÃ©finir une police stylisÃ©e
        Font customFont = new Font("Arial", Font.BOLD | Font.ITALIC, 24);
        g2d.setFont(customFont);

        // ðŸ”¹ DÃ©finir une couleur pour le texte
        g2d.setColor(Color.BLUE);

        // ðŸ”¹ Dessiner le texte Ã  une position spÃ©cifique
        g2d.drawString("Porte AND", 100, 100);

        // ðŸ”¹ Ajouter une ombre pour effet 3D
        g2d.setColor(Color.GRAY);
        g2d.drawString("Porte AND", 102, 102);
    }
}
