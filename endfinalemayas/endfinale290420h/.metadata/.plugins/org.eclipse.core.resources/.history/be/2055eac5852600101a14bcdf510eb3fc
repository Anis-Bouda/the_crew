package GRAPHIQUE;
import java.io.File;
import java.util.HashMap;
import java.util.Map;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;

import org.w3c.dom.Document;

import Principale.Composant;

public class MyGate extends Composant {
    private final Map<String, Principale.State> truthTable;

    public MyGate(String id, int x, int y, String xmlFilePath) {
        super(id, x, y);
        this.addInput(Principale.State.UNKNOWN);
        this.addInput(Principale.State.UNKNOWN);
        this.addOutput(Principale.State.UNKNOWN);

        this.truthTable = loadTruthTable(xmlFilePath);
    }

    @Override
    public void evaluate() {
        Principale.State a = this.inputs.get(0);
        Principale.State b = this.inputs.get(1);

        if (a == Principale.State.UNKNOWN || b == Principale.State.UNKNOWN) {
            this.outputs.set(0, Principale.State.UNKNOWN);
            return;
        }

        String key = (a == Principale.State.TRUE ? "1" : "0")
                   + (b == Principale.State.TRUE ? "1" : "0");

        Principale.State output = truthTable.getOrDefault(key, Principale.State.UNKNOWN);
        this.outputs.set(0, output);
        this.state = output;
    }

    private static Map<String, Principale.State> loadTruthTable(String xmlFilePath) {
        Map<String, Principale.State> truthTable = new HashMap<>();
        try {
            File file = new File(xmlFilePath);
            DocumentBuilderFactory dbFactory = DocumentBuilderFactory.newInstance();
            DocumentBuilder dBuilder        = dbFactory.newDocumentBuilder();
            Document doc                    = dBuilder.parse(file);
            doc.getDocumentElement().normalize();

            String tableText = doc.getElementsByTagName("truthTable")
                                  .item(0)
                                  .getTextContent()
                                  .trim();

            // Split sur \r\n ou \n
            for (String line : tableText.split("\\r?\\n")) {
                String[] parts = line.trim().split("=");
                if (parts.length == 2) {
                    String inputCombo = parts[0].trim();
                    String outputChar = parts[1].trim();
                    Principale.State outputState;
                    switch (outputChar) {
                        case "0": outputState = Principale.State.FALSE;   break;
                        case "1": outputState = Principale.State.TRUE;    break;
                        default:  outputState = Principale.State.UNKNOWN; break;
                    }
                    truthTable.put(inputCombo, outputState);
                }
            }

        } catch (Exception e) {
            e.printStackTrace(); // Ã  remplacer par log ou message utilisateur si besoin
        }
        return truthTable;
    }
}
