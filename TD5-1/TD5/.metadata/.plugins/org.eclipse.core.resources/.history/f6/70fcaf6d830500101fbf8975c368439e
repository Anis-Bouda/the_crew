import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Ligne extends JPanel {
    private static final int START_X = 100; // Position X fixe du début de la ligne
    private static final int START_Y = 100; // Position Y fixe du début de la ligne

    private int endX = START_X; // Position X actuelle de la fin de la ligne
    private int endY = START_Y; // Position Y actuelle de la fin de la ligne

    private boolean dragging = false; // Indique si on est en train de déplacer la fin de la ligne

    public Ligne() {
        setBackground(Color.WHITE); // Fond blanc

        // Ajout d'un écouteur de souris pour détecter le clic
        addMouseListener(new MouseAdapter() {
            @Override
            public void mousePressed(MouseEvent e) {
                // Active le déplacement de la fin de la ligne
                dragging = true;
            }

            @Override
            public void mouseReleased(MouseEvent e) {
                dragging = false; // Arrête le déplacement
            }
        });

        // Ajout d'un écouteur de mouvement de la souris
        addMouseMotionListener(new MouseAdapter() {
            @Override
            public void mouseDragged(MouseEvent e) {
                if (dragging) {
                    endX = e.getX(); // Met à jour la position X de la fin de la ligne
                    endY = e.getY(); // Met à jour la position Y de la fin de la ligne
                    repaint(); // Redessine le composant pour afficher la nouvelle ligne
                }
            }
        });
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        
        // Récupérer un objet Graphics2D pour un rendu plus précis
        Graphics2D g2d = (Graphics2D) g;
        g2d.setColor(Color.BLUE); // Définir la couleur de la ligne
        g2d.setStroke(new BasicStroke(20)); // Épaisseur de la ligne

        // Dessiner la ligne du point fixe à la fin actuelle
        g2d.drawLine(START_X, START_Y, endX, endY);
    }

    // Méthode principale pour tester l'affichage
    public static void main(String[] args) {
        JFrame frame = new JFrame("Ligne interactive");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(30, 10);
        frame.add(new Ligne());
        frame.setVisible(true);
    }
}
