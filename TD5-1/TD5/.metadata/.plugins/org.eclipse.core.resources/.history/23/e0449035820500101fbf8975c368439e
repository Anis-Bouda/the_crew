public class NOT extends AbstractComponent {
    public NOT() {
        super("NOT");
        outputPorts.add(new java.awt.Point(0, 0)); // Ajoute un port de sortie
        inputPorts.add(new java.awt.Point(0, 0));  // Ajoute un port d'entr√©e
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        Graphics2D g2d = (Graphics2D) g;

        int[] xPoints = {20, 20, 80};
        int[] yPoints = {10, 50, 30};

        g2d.setColor(Color.WHITE);
        g2d.fillPolygon(xPoints, yPoints, 3);
        g2d.setColor(Color.BLACK);
        g2d.drawPolygon(xPoints, yPoints, 3);

        // Dessiner la bulle
        g2d.setColor(Color.WHITE);
        g2d.fillOval(80, 25, 10, 10);
        g2d.setColor(Color.BLACK);
        g2d.drawOval(80, 25, 10, 10);
    }
}
